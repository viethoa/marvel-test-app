<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/radius_04_dp"
    app:cardElevation="@dimen/elevation_02_dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.viethoa.potdemo.widgets.HorizontalImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:transitionName="image_thumbnail" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_primary_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_04_dp"
            android:layout_marginEnd="@dimen/space_10_dp"
            android:layout_marginLeft="@dimen/space_10_dp"
            android:layout_marginRight="@dimen/space_10_dp"
            android:layout_marginStart="@dimen/space_10_dp"
            android:layout_marginTop="@dimen/space_10_dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:transitionName="text_name" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/text_light_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10_dp"
            android:layout_marginEnd="@dimen/space_10_dp"
            android:layout_marginLeft="@dimen/space_10_dp"
            android:layout_marginRight="@dimen/space_10_dp"
            android:layout_marginStart="@dimen/space_10_dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:transitionName="text_description" />
    </LinearLayout>
</android.support.v7.widget.CardView>