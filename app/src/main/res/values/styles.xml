<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.Splash" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>

        <!-- toolbar -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/ToolbarStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Control style -->
        <item name="android:textViewStyle">@style/Application.TextView</item>
        <item name="android:editTextStyle">@style/Application.EditText</item>
        <item name="android:buttonStyle">@style/Application.Button</item>
        <item name="editTextStyle">@style/Application.EditText</item>
        <item name="buttonStyle">@style/Application.Button</item>

        <!-- Popup size style -->
        <item name="android:dialogTheme">@style/Window.DialogStyle</item>
        <item name="dialogTheme">@style/Window.DialogStyle</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowMinWidthMajor">80%</item>
    </style>

    <style name="BaseAppTheme.FullScreen" parent="BaseAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--######################## Toolbar style ########################-->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/colorBright</item>
        <item name="android:textColorSecondary">@color/colorBright</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:popupMenuStyle">@style/ToolbarPopup</item>
        <item name="android:textSize">@dimen/font_14_sp</item>
        <item name="actionMenuTextColor">@color/colorBright</item>
        <item name="android:actionMenuTextColor">@color/colorBright</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_14_sp</item>
        <item name="android:textColor">@color/colorBright</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ToolbarPopup" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBright</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorBright</item>
    </style>


    <!--######################## Control style ########################-->
    <style name="Application.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/colorBright</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:paddingRight">@dimen/space_12_dp</item>
        <item name="android:paddingLeft">@dimen/space_12_dp</item>
        <item name="android:paddingTop">@dimen/space_16_dp</item>
        <item name="android:paddingBottom">@dimen/space_16_dp</item>
    </style>

    <style name="Application.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="Application.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorBright</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Application.Button.Normal" parent="Application.Button">
        <item name="android:paddingLeft">@dimen/space_14_dp</item>
        <item name="android:paddingRight">@dimen/space_14_dp</item>
        <item name="android:paddingTop">@dimen/space_10_dp</item>
        <item name="android:paddingBottom">@dimen/space_10_dp</item>
    </style>


    <!--######################## Dialog style ########################-->
    <style name="Window.DialogStyle" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
    </style>

    <style name="FullScreen.DialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--######################## TextView style ########################-->
